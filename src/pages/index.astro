const response = await fetch('https://graphql.datocms.com/', {
  method: 'POST',
  headers: {
    'Content-Type': 'application/json',
    Accept: 'application/json',
    Authorization: `Bearer ${import.meta.env.PUBLIC_DATOCMS_API_KEY}`,
  },
  body: JSON.stringify({
    query: `query PostsQuery {
					allPosts {
						id
						title
						content
						_image {
							url
							width
							height
						}
						_status
						_firstPublishedAt
					}

					_allPostsMeta {
						count
					}
				}
      `,
  }),
});

const json = await response.json();
const data = json.data.allPosts;


---

<Layout>
	<div class="post-container">
		{data.map((post: any) => (
			<article>
				<h2>{post.title}</h2>
				<div set:html={post.content}></div>
				<p>Status: {post._status}</p>
				<p>Published at: {new Date(post._firstPublishedAt).toLocaleDateString()}</p>
				<img src={post._image.url} alt="Covering image" width={post._image.width} height={post._image.height} />

			</article>
		))}
	</div>
</Layout>

<style>
	.post-container {
		padding: 16px;
	}
	article {
		margin-bottom: 24px;
		padding: 16px;
		border: 1px solid #ccc;
		border-radius: 8px;
		background-color: #f9f9f9;
	}
</style>